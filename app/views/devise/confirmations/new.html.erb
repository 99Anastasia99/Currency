<div class="card">
  <div class="card-header">
    <div id="page-header" class="flex-container">
      <div class="page-header">
        <h2><%= t("devise.confirmations.resend_confirmation_intructions") %></h2>
      </div>
    </div>
  </div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name,  url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t("devise.confirmations.resend_confirmation_intructions"), data: { disable: true }, class: "btn btn-green btn-lg btn-block" %>
        </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
