<div class="page-header">
  <h1><%= t("devise.passwords.change") %></h1>
</div>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="well">
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :password, required: true, input_html: { complexity_check: true } %>
      <%= render 'shared/password_complexity_check' %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.hidden_field :reset_password_token %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.passwords.change_button"), class: "btn btn-warning", data: { disable: true } %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
