<p><%= t("devise.mailer.invitation_instructions.welcome", name: @resource.name) %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", email: @resource.email).html_safe %></p>

<p><%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, :invitation_token => @resource.raw_invitation_token) %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.ignore") %></p>

<p><%= t("devise.mailer.invitation_instructions.signature").html_safe %></p>
