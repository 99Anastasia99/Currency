<div class="page-header">
  <h1><%= t "devise.invitations.edit.header" %></h1>
</div>
<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name)) do |f| %>
  <div class="well">
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :password, required: true, input_html: { complexity_check: true } %>
      <%= render 'shared/password_complexity_check' %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.hidden_field :invitation_token, value: invitation_token(params) %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: "btn btn-warning", data: { disable: true } %>
    </div>
  </div>
<% end %>

