<div class="page-header">
  <h1><%= t "devise.invitations.new.header" %></h1>
</div>

<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name),
    html: { method: :post} do |f| %>
  <div class="well">
    <div class="form-inputs">
      <% resource.class.invite_key_fields.each do |field| %>
        <%= f.input field %>
      <% end %>
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :surname, required: true, autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.new.submit_button"),
        class: 'btn btn-success', data: { disable: true } %>
    </div>
  </div>
<% end %>
