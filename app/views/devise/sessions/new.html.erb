<div class="card">
  <div class="card-header">
    <div id="page-header" class="flex-container">
      <div class="page-header">
        <h1><%= resource.class %></h1>
      </div>
    </div>
  </div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <div class="form-group password optional admin_password">
            <label class="password optional" for="admin_password">Password</label>
              <input class="form-control password optional" type="password" name="admin[password]" id="password-field">
              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", data: { disable: true }, class: "btn btn-green btn-lg btn-block" %>
        </div>
    <% end %>
  </div>
  <div class="card-footer">
    <div class="form-actions">
      <%= link_to login_title(opposite_resource_class(resource)), path_to_opposite_resource(resource), class: "btn btn-dark-green btn-lg btn-block" %>
    </div>
  </div>
</div>

  <%= render "devise/shared/links" %>
