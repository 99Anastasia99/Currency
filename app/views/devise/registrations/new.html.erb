<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="well">
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :surname, required: true, autofocus: true %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, input_html: { complexity_check: true } %>
      <%= render 'shared/password_complexity_check' %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-warning", data: { disable: true } %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
