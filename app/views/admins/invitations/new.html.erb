<div class="page-header">
  <h1><%= t "devise.invitations.new.header" %></h1>
</div>
  <div class="well">
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :surname, required: true, autofocus: true %>
      <%= f.input :password, required: true, input_html: { complexity_check: true } %>
      <%= render 'shared/password_complexity_check' %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.new.submit_button", class: "btn btn-warning", data: { disable: true } %>
    </div>
  </div>
<% end %>

